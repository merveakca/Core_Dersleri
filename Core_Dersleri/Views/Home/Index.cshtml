
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>DERS 4</title>
</head>
<body>
    <div style="background-color:#ffd800">
        @DateTime.Now.ToShortDateString()
    </div>
    <br />
    <div style="background-color:#0094ff">
        @for(int i = 1; i <= 10; i++)
        {
            @i<br />
        }
    </div>
    <br />
    <br />
    <div style="background-color:#b200ff">
        @{ 
                var liste = new List<string>() { "Ankara", "Bursa", "Adana", "İzmir" };
        }
        @foreach(var li in liste)
        {
            @li <br />
        }
    </div>
</body>
</html>
